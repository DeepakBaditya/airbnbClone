<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-3  show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <%= listing.description %> <br>
                    &#X20B9;<%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>    
                    <%= listing.country %> <br>
                </p>
            </div>
        </div>
        <div class="btns">
            <a class="btn btn-dark col-1 offset-3 edit-btn" href="/listings/<%= listing._id %>/edit">Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-2">Delete</button>
                <!-- <button style="color: #fff;background-color: #000;border-radius: 12px;padding: 5px;margin-top: 10px;height: 40px;width: 85px;">Delete</button> -->
            </form>
        </div>    
    </div>      
</body>